{
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "keywords": [
    "rent",
    "unused",
    "items"
  ],
  "license": "ISC",
  "author": "Ilias Mentzelos <iliasmentz@gmail.com>",
  "main": "app.js",
  "scripts": {
    "build": "tsc",
    "db:migrate": "npm run typeorm -- migration:run",
    "db:revert-migrate": "npm run typeorm -- migration:revert",
    "debug": "node --inspect-brk $(type -p serverless) invoke local",
    "docker:up": "docker-compose down && docker-compose up -d --build api",
    "docs": "typedoc --tsconfig --out docs src",
    "functionaltests": "run-s functionaltests:prepare functionaltests:run",
    "functionaltests:prepare": "run-s build docker:up wait:api",
    "functionaltests:run": "jest -c jest.functionaltests.config.js --runInBand",
    "lint": "eslint --ext .js,.ts src",
    "prebuild": "rimraf ./build",
    "pretest": "mkdir -p ./reports/units && cp ./node_modules/jest-html-reporter/style/defaultTheme.css ./reports/units/style.css",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "start": "pm2 start",
    "start:dev": "nodemon",
    "test": "jest",
    "test-debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config db/connection/config.ts",
    "wait:api": "wait-on -d 1000 -t 30000 http://localhost:3000/health"
  },
  "dependencies": {
    "ajv": "^6.12.3",
    "axios": "^0.21.1",
    "boom": "^7.3.0",
    "card-validator": "^8.1.1",
    "date-fns": "^2.21.3",
    "dotenv": "^8.2.0",
    "fluent-json-schema": "^3.0.0",
    "jest-html-reporter": "^3.1.3",
    "koa": "2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-compose": "^4.1.0",
    "koa-pino-logger": "^3.0.0",
    "koa-router": "^10.0.0",
    "mock-http-server": "^1.4.2",
    "nanoid": "^3.1.23",
    "path": "^0.12.7",
    "pg": "^8.6.0",
    "pino": "^6.4.0",
    "pino-pretty": "^4.2.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.32",
    "typeorm-encrypted": "^0.5.6",
    "typeorm-naming-strategies": "^2.0.0",
    "uuidv4": "^6.2.8"
  },
  "devDependencies": {
    "@types/boom": "^7.3.0",
    "@types/jest": "^26.0.4",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-compose": "^3.2.5",
    "@types/koa-pino-logger": "^2.1.6",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.14.44",
    "@types/pino": "^6.3.0",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "8.28.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-html-reporter": "0.7.4",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "26.1.0",
    "jest-mock-process": "^1.4.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.3.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^8.10.2",
    "typescript": "^4.2.4",
    "wait-on": "^5.3.0"
  }
}
