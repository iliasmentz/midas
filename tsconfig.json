{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],

  },
  "include": ["./src/**/*", "./db/**/*"],
  "exclude": ["./**/__tests__/*", "./**/__functionaltests__/*", "types"]
}
